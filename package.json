{
  "name": "opendarkroom",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types" : "dist/index.d.ts",
  "preferGlobal": true,
  "bin": { "odr": "dist/index.js" },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opendarkroom/toolkit.git"
  },
  "scripts": {
    "help": "npm run start -- --help",
    "odr": "npm run start",
    "start": "ts-node src/index.ts",
    "tslint": "tslint",
    "tsc": "tsc",
    "lint": "npm run tslint -- --project tsconfig.json && npm run tslint -- --project tsconfig.tests.json",
    "build": "npm run tsc",
    "build-tests": "npm run tsc -- --project tsconfig.tests.json",
    "build-all": "npm run build && npm run build-tests",
    "test": "ava --verbose",
    "ci": "npm run lint && npm run build-all && npm run test"
  },
  "author": "James Thurley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opendarkroom/toolkit/issues"
  },
  "homepage":"https://opendarkroom.com/",
  "dependencies": {
    "commander": "^2.15.1",
    "desktop-screenshot": "^0.1.1",
    "fs-extra": "^5.0.0",
    "gifwrap": "^0.7.5",
    "jimp": "^0.2.28"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^5.0.1",
    "@types/node": "^9.4.7",
    "ava": "^1.0.0-beta.3",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "ava": {
    "files": [
      "integration-tests/**/*.spec.{js,ts}",
      "src/**/*.spec.{js,ts}"
    ],
    "sources": [
      "src/**/*.{js,ts}",
      "!dist/**/*"
    ],
    "concurrency": 2,
    "failFast": false,
    "failWithoutAssertions": false,
    "tap": false,
    "compileEnhancements": false,
    "require": [
      "ts-node/register"
    ]
  }
}
